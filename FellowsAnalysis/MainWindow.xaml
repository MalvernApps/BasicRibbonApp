<Window x:Class="FellowsAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FellowsAnalysis"
        mc:Ignorable="d"
        Title="Fellows Analysis prog by Glenn" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Ribbon x:Name="RibbonWin"  SelectedIndex="0">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu KeyTip="F">
                    <RibbonApplicationMenuItem Header="Options" ImageSource="/Images\options.png" />
                    <RibbonApplicationMenuItem Header="Exit" ImageSource="/Images\quit.png" Click="exitclick"/>
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>

            <RibbonTab Header="Home" KeyTip="H" >
                <RibbonGroup Header="Group">
                    <RibbonButton  Click="TestClick" LargeImageSource="Images\screenshot.png" Label="Test Button" KeyTip="T" />
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>


    </Grid>
</Window>
